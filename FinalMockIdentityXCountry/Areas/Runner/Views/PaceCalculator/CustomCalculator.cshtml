@using FinalMockIdentityXCountry.Models.ViewModels.RunnerAreaViewModels
@model CustomCalculatorViewModel

<div class="container mx-auto">
    <h3>Pace Calculator</h3>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="input-group">
            <span class="input-group-text">Time (Hours:Minutes:Seconds)</span>
            <input asp-for="Hours" class="form-control" required/>
            <input asp-for="Minutes" class="form-control" required/>
            <input asp-for="Seconds" class="form-control" required />
        </div>
        <br />
        <div class="input-group">
            <span class="input-group-text">Distance (in miles)</span>
            <input asp-for="@Model.Distance" class="form-control" aria-label="distance" />
        </div>
        <br />
        <div class="input-group">
            <span class="input-group-text">Your Pace:</span>
            <input asp-for="PaceString" disabled="disabled" class="form-control" />
        </div>
        <br />
        <a asp-action="CustomCalculator" class="btn btn-danger">Clear</a>
        <button type="submit" class="btn btn-primary">Calculate</button>
    </form>
</div>