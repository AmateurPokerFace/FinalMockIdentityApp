@using FinalMockIdentityXCountry.Models.ViewModels.RunnerAreaViewModels
@model LogDataViewModel


<div class="container mx-auto">
    <h3>Enter your run data for this practice.</h3>
    <form method="post">
        <div>
            <p>Start Date/Time: @Model.PracticeStartDateTime</p>
            <p>Location: @Model.PracticeLocation</p>
            <p>Workout: @Model.WorkoutName</p>
        </div>
        <br />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="input-group">
            <span class="input-group-text">Distance (in miles):</span>
            <input asp-for="@Model.Distance" class="form-control" aria-label="distance" required/>
        </div>
        <br />
        <div class="input-group">
            <span class="input-group-text">Time (Hours:Minutes:Seconds)</span>
            <input asp-for="@Model.Hours" class="form-control" aria-label="hours" required />
            <input asp-for="@Model.Minutes" class="form-control" aria-label="minutes" required />
            <input asp-for="@Model.Seconds" class="form-control" aria-label="seconds" required/>
        </div>
        <input type="hidden" asp-for="@Model.WorkoutInformationId" />
        <input type="hidden" asp-for="@Model.PracticeId" />
        <input type="hidden" asp-for="@Model.RunnerId" />
        <br />
        <a asp-action="Index" class="btn btn-danger">Cancel</a>
        <button type="submit" class="btn btn-primary">Save</button>
        <br />
    </form>
</div>

