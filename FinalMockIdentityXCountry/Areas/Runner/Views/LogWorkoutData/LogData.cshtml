@using FinalMockIdentityXCountry.Models.ViewModels.RunnerAreaViewModels
@model LogDataViewModel



<form method="post">
    <div>
        <label class="form-label">@Model.PracticeStartDateTime @Model.PracticeLocation</label>
        <label class="form-label">Workout: @Model.WorkoutName</label>
    </div>
    <br />
    <div>
        <label asp-for="@Model.Distance" class="form-label">Distance:</label>
        <input asp-for="@Model.Distance" class="form-control"/>
    </div>
    <div>
        <label asp-for="@Model.Hours" class="form-label">Hours:</label>
        <input asp-for="@Model.Hours" class="form-control" />
    </div>
    <div>
        <label asp-for="@Model.Minutes" class="form-label">Minutes:</label>
        <input asp-for="@Model.Minutes" class="form-control" />
    </div>
    <div>
        <label asp-for="@Model.Seconds" class="form-label">Seconds:</label>
        <input asp-for="@Model.Seconds" class="form-control" />
    </div>
    <input type="hidden" asp-for="@Model.WorkoutInformationId"/>
    <input type="hidden" asp-for="@Model.PracticeId"/>
    <input type="hidden" asp-for="@Model.RunnerId"/>

    <a asp-action="Index" class="btn btn-danger">Cancel</a>
    <button type="submit" class="btn btn-primary">Save</button>
    <br />
</form>
