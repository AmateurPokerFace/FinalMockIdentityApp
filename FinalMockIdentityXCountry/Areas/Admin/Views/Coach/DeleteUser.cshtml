@using FinalMockIdentityXCountry.Models.ViewModels.AdminAreaViewModels.CoachControllerViewModels
@model DeleteUserViewModel

<div class="container mx-auto">
    <div class="alert alert-danger" role="alert">
        Warning! All data for the user @Model.UsersName will be permanently deleted and will not be recoverable.
    </div>

    <label class="form-label">Are you sure that you want to delete @Model.UsersName?</label>
    <br />
    <form method="post">
        <a class="btn btn-outline-danger" asp-action="CoachAdminPanel">Cancel</a>
        <input type="hidden" asp-for="@Model.UserId" />
        <input type="hidden" asp-for="@Model.UsersName" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
    </form>
</div>
