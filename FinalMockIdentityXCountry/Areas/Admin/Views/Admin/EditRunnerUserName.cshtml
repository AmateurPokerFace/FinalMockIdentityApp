@using FinalMockIdentityXCountry.Models.ViewModels.AdminAreaViewModels
@model EditRunnerUserNameViewModel

<label class="form-label">Current Name: @Model.OldUserName</label>

<form method="post">
    <div>
        <label asp-for="UserName" class="form-label">Enter New UserName:</label>
        <input asp-for="UserName" class="form-control" />
    </div> 
    <input type="hidden" asp-for="@Model.RunnerId" />
    <a asp-action="CurrentRunnersList" class="btn btn-danger">Cancel</a>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>