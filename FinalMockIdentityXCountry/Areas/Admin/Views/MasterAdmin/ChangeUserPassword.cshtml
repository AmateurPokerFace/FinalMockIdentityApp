@using FinalMockIdentityXCountry.Models.ViewModels.AdminAreaViewModels.MasterAdminControllerViewModels
@model ChangeUserPasswordViewModel

<div class="container mx-auto">
    <label class="form-label">Change Password for @Model.UsersName</label>

    <form method="post">
        <div class="input-group">
            <span class="input-group-text">Enter new password</span>
            <input asp-for="NewPassword" class="form-control" required />
        </div>
        <br />
        <a class="btn btn-danger" asp-action="MasterAdminPanel">Cancel</a>
        <button type="submit" class="btn btn-primary">Save Password</button>
    </form>
</div>
