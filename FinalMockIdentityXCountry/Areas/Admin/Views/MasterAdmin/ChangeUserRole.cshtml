@using FinalMockIdentityXCountry.Models.ViewModels.AdminAreaViewModels.MasterAdminControllerViewModels
@model ChangeUserRoleViewModel

<div class="container mx-auto">
    @if (Model.RolesList != null && Model.RolesList.Count > 0)
    {
        <div class="alert alert-danger" role="alert">
            Warning! Changing the role of the user may result in the loss of data.
        </div>

        <form method="post" asp-action="ChangeRole">
            <div class="mb-3">
                <h3>Current Role: @Model.CurrentRoleName</h3>
                <div class="input-group">
                    <span class="input-group-text">Change Role To: </span>
                    <select class="form-select" asp-items="Model.RolesList" asp-for="SelectedRoleName" required>
                    </select>
                </div>
            </div>
            <input type="hidden" asp-for="CurrentRoleName">
            <input type="hidden" asp-for="UserId">
            <a asp-action="MasterAdminPanel" class="btn btn-outline-danger">Cancel</a>
            <button class="btn btn-danger">Confirm</button>
        </form>

    }
</div>

