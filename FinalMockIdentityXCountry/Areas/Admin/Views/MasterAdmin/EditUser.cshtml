@using FinalMockIdentityXCountry.Models.ViewModels.AdminAreaViewModels.MasterAdminControllerViewModels
@model EditUserViewModel

<div class="container mx-auto">
    <h3>Edit User Information</h3>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Username</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Name</td>
                    <td>@Model.UserName</td>
                    <td><a class="btn btn-primary" asp-action="EditUsersName" asp-route-userId="@Model.UserId">Edit Name</a></td>
                    <td><a class="btn btn-primary" asp-action="EditUserUsersName" asp-route-userId="@Model.UserId">Edit Username</a></td>
                    <td><a class="btn btn-primary" asp-action="ChangeUserPassword" asp-route-userId="@Model.UserId">Change Password</a></td>
                </tr>
            </tbody>
        </table>
    </div>
    
</div>
