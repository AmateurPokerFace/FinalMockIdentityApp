@using FinalMockIdentityXCountry.Models.ViewModels.AdminAreaViewModels.MasterAdminControllerViewModels
@model EditUsersNameViewModel 

<div class="container mx-auto">
    <div class="alert alert-primary" role="alert">
        The first name and last name field each have a requirement of 1 minimum character length and 35 maximum characters.
    </div>

    <h3 class="form-label">Edit Name for @Model.OldName</h3>
    <br />
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="input-group">
            <span class="input-group-text">Edit first and last name</span>
            <input type="text" asp-for="FirstName" aria-label="First name" class="form-control">
            <input type="text" asp-for="LastName" aria-label="Last name" class="form-control" >
        </div>
        <input type="hidden" asp-for="@Model.UserId" />
        <br />
        <a asp-action="MasterAdminPanel" class="btn btn-danger">Cancel</a>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
