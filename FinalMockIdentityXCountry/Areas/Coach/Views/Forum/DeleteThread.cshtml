@model MessageBoard

<div class="container mx-auto">
    <h3>Delete this Thread?</h3>
    <br />
    <form class="form" method="post">
        <div>
            <p>Title: @Model.MessageTitle</p>
            
            <p> Body: @Model.MessageBody</p>
            <br />
            <input hidden="hidden" asp-for="@Model.Id"/>
            <a class="btn btn-outline-danger" asp-action="Home">Cancel</a>
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
        </div>
    </form>
</div>