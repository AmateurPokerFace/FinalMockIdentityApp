@using FinalMockIdentityXCountry.Models.ViewModels.CoachAreaViewModels.CurrentPracticeController
@model SignRunnerOutViewModel

<div class="container mx-auto">
    <label>@Model.PracticeStartDateTime | @Model.PracticeLocation</label>
    <form method="post">
        <div>
            <label class="form-label" asp-for="RunnersName">Are you sure that you want to sign @Model.RunnersName out of the current practice?</label>
        </div>
        <a asp-action="Attendance" class="btn btn-danger">Cancel</a>

        <input type="hidden" asp-for="AttendanceId" />

        <button type="submit" class="btn btn-danger">Confirm sign out</button>
    </form>
</div>
