@using FinalMockIdentityXCountry.Models.ViewModels.CoachAreaViewModels.DataController
@model EditRunnerCurrentPracticeDataViewModel

@{
    bool workoutFound = false;
}
<label>@Model.RunnersName Current Practice Workout Data</label>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Date</th>
            <th scope="col">Location</th>
            <th scope="col">Workouts</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
        </thead>
    <tbody>
        <tr>
           @*Column 1*@ <td>@Model.PracticeStartDateTime</td>
             @*Column 2*@ <td>@Model.PracticeLocation</td>
            @if (Model.Workouts != null && Model.Workouts.Count() > 0)
            {
                @*Column 3*@  <td> @foreach (var workout in Model.Workouts) { @workout <br />  } </td>
                workoutFound = true;
            }
            else {  @*Column 3*@  <td>N/A</td> }
            @if (Model.Workouts != null && Model.Workouts.Count() == Model.WorkoutTypeRecordCount)
            {
                <td></td>
            }
            else
            {
                @*Column 4*@
                <td><a asp-action="AddNewWorkoutsToPractice" asp-route-runnerId="@Model.RunnerId" asp-route-practiceId="@Model.PracticeId" class="btn-link">Add workout to practice</a></td>
            } 
            @if (workoutFound)
            {
                @*Column 5*@ 
                <td><a asp-action="DeleteWorkoutsFromPractice" asp-route-runnerId="@Model.RunnerId" asp-route-practiceId="@Model.PracticeId" class="btn-link">Delete workout from practice</a></td>
                @*Column 6*@
                <td><a asp-action="ViewDataEntered" asp-route-runnerId="@Model.RunnerId" asp-route-practiceId="@Model.PracticeId" class="btn-link">View/Edit data entered</a></td>
            }
            else{
                 @*Column 5*@ <td></td>
                 @*Column 6*@ <td></td>
            }
        </tr>
    </tbody>
</table>