@using FinalMockIdentityXCountry.Models.ViewModels.CoachAreaViewModels.DataController
@model ViewDataEnteredViewModel

<div class="container mx-auto">
    <h3>Viewing Data for @Model.RunnerName </h3>
    <p style="font-weight: lighter;">@Model.PracticeStartDateTime | @Model.PracticeLocation</p>

    @if (Model.ViewDataEnteredViewModelHelpers.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Distance</th>
                    <th scope="col">Workout</th>
                    <th scope="col">Hours</th>
                    <th scope="col">Minutes</th>
                    <th scope="col">Seconds</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var workoutData in Model.ViewDataEnteredViewModelHelpers)
                {
                    <tr>
                        <td>@workoutData?.WorkoutName</td>
                        <td>@workoutData?.Hours</td>
                        <td>@workoutData?.Minutes</td>
                        <td>@workoutData?.Seconds</td>
                        <td>@workoutData?.Distance</td>
                        <td><a asp-action="EditEnteredData" asp-route-workoutInformationId="@workoutData?.WorkoutId" class="btn btn-primary">Edit Data</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

