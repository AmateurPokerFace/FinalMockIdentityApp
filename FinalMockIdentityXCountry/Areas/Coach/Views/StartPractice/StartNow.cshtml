@using FinalMockIdentityXCountry.Models.ViewModels.CoachAreaViewModels
@model StartNowViewModel

<div>
    <h3>Start a New Practice Session</h3>
</div>
<div class="form-control">
    <form method="post">
        @*@Html.AntiForgeryToken()*@
        <div>
            <label asp-for="PracticeLocation" class="form-label">Practice Location</label>
            <input asp-for="PracticeLocation" class="form-control"/>
        </div> 
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Runner</th>
                        <th scope="col">Present</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var runner in Model.RunnerUsers)
                    {
                        <tr>
                            <td>@runner.FirstName @runner.LastName</td> 
                            <td><input type="checkbox" name="presentRunners" value="@runner.Id" class="form-check" /></td> 
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <button type="submit" class="btn btn-primary">Start Practice</button>
    </form>
</div>