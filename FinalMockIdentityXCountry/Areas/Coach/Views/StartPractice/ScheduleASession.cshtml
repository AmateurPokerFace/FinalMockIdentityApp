@using FinalMockIdentityXCountry.Models.ViewModels.CoachAreaViewModels.StartPracticeController
@model ScheduleASessionViewModel

<div>
    <h3>Schedule a Practice Session for Later</h3>
</div>
<div class="form-control">
    <form method="post"> 
        <div>
            <label asp-for="PracticeLocation" class="form-label">Practice Location</label>
            <input asp-for="PracticeLocation" class="form-control" />
            <span asp-validation-for="PracticeLocation" class="text-danger"></span>
        </div>
        <br />
        <div>
            <label asp-for="PracticeStartTimeAndDate" class="form-label">Start Date and Time</label>
            <input asp-for="PracticeStartTimeAndDate"  class="form-control" /> 
        </div>
        <br />
        <div>
            <label asp-for="PracticeEndTimeAndDate" class="form-label">End Date and Time</label>
            <input asp-for="PracticeEndTimeAndDate" class="form-control" />
        </div>
        <br />
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Runner</th>
                    <th scope="col">Is Attending</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.SessionViewModelCheckboxOptions != null && Model.SessionViewModelCheckboxOptions.Count() > 0)
                {
                    @for (int i = 0; i < Model.SessionViewModelCheckboxOptions.Count(); i++)
                    {
                        <tr>
                            <td>@Model.SessionViewModelCheckboxOptions[i].RunnerName</td>
                            <td>
                                <input asp-for="@Model.SessionViewModelCheckboxOptions[i].IsAttending" type="checkbox" />
                                <input type="hidden" asp-for="@Model.SessionViewModelCheckboxOptions[i].RunnerName" />
                                <input type="hidden" asp-for="@Model.SessionViewModelCheckboxOptions[i].RunnerId" />
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <br />
        <button type="submit" class="btn btn-primary">Schedule Practice</button>
    </form>
</div>