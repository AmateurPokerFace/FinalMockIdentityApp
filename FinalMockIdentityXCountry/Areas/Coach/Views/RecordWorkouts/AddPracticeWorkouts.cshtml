@using FinalMockIdentityXCountry.Models.ViewModels.CoachAreaViewModels
@model List<AddPracticeWorkoutsViewModel> 

 <div class="container mx-auto">
     <h2>Select a workout type for each athelete.</h2>
    <form method="post" class="form-control">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Runner</th>
                        <th scope="col" colspan="6">Workout Type(s)</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        <tr>
                            <td scope="row">@Model[i].RunnerName</td>
                            @if (Model[i].SelectedWorkoutCheckboxOptions != null && Model[i].SelectedWorkoutCheckboxOptions.Count > 0)
                            {
                                @for (int j = 0; j < Model[i].SelectedWorkoutCheckboxOptions.Count(); j++)
                                {
                                    <td>
                                        <input asp-for="@Model[i].SelectedWorkoutCheckboxOptions[j].IsSelected" type="checkbox" /> @Model[i].SelectedWorkoutCheckboxOptions[j].WorkoutType.WorkoutName
                                        <input type="hidden" asp-for="@Model[i].PracticeId" />
                                        <input type="hidden" asp-for="@Model[i].SelectedWorkoutCheckboxOptions[j].WorkoutTypeId" />
                                        <input type="hidden" asp-for="@Model[i].SelectedWorkoutCheckboxOptions[j].RunnerId" />
                                        <input type="hidden" asp-for="@Model[i].SelectedWorkoutCheckboxOptions[j].PracticeId" />
                                    </td>
                                }
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
 </div>