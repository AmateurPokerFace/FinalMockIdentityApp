@model WorkoutType

<div class="container mx-auto">
    <h3>Edit Workout Name</h3>
    <form method="post">
        <label asp-for="@Model.WorkoutName" class="form-label">Workout name:</label>
        <input asp-for="@Model.WorkoutName" class="form-control"/>
        <input type="hidden" asp-for="@Model.Id" />
        <br />
        <a class="btn btn-danger" asp-action="CurrentWorkouts">Cancel</a>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
