@using FinalMockIdentityXCountry.Models.ViewModels.CoachAreaViewModels
@model List<SelectedRunnerHistoryViewModel>

<div class="container mx-auto">
    @if (Model.FirstOrDefault().RunnersName != null)
    {
        <label class="form-label">Model.FirstOrDefault().RunnersName Practice History</label>

        <br />

        <br />
    }

    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Location</th>
                    <th scope="col">Workout(s)</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var runner in Model)
                {
                    <tr>
                        <td>@runner.PracticeStartDate</td>
                        <td>@runner.PracticeLocation</td>
                        @if (runner.PracticeWorkouts.Count() > 0)
                        {
                            <td>
                                @foreach (var workout in runner.PracticeWorkouts)
                                {
                                    @workout

                                    <br />
                                }
                            </td>

                        }
                        <td><a class="btn btn-primary">View (needs implementing)</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
    